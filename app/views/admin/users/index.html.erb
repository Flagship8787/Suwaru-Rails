<article class="module width_full">
	<header><h3>Showing <%= @users.nil? ? "0" : @users.length.to_s %> Users</h3></header>
	<div class="module_content">
		<table id="users_index_table" class="tablesorter" cellspacing="0">
			<thead>
				<tr>
					<th>User Name</th>
					<th>Email</th>
					<th>User Since</th>
					<th>Logged In?</th>
					<th>Options</th>
				</tr>
				<tbody>
					<% @users.each do |aUser| %>
						<tr>
							<td><%= aUser.username %></td>
							<td><%= mail_to aUser.email %></td>
							<td><%= aUser.created_at.to_s(:date_medium) %></td>
							<td>
								<% if !aUser.current_sign_in_at.nil? %>
									<span style="color:green">
										On <%= aUser.current_sign_in_at.to_s(:date_medium) %>
										<br /> from <%= aUser.current_sign_in_ip %>
									</span>
								<% else %>
									<span style="color:orange">Nope</span>
								<% end %>
							</td>
							<td>
								<%= link_to "View Account", admin_user_path(aUser) %>
								<%= link_to "Edit", edit_admin_user_path(aUser) %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</thead>
		</table>
	</div>
</article>