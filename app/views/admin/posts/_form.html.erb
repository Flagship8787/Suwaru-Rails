<%= render "admin/posts/form/assets/styles" %>
<%= render "admin/posts/form/assets/scripts" %>
<%= form_for(@post, :url => (@post.id.nil? ? admin_posts_path : admin_post_path(@post))) do |f| %>
	<% if @post.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
  	<div class="field">
    	<%= f.label :Title %><br />
    	<%= f.text_field :Title %>
  	</div>
	<% @content = @post %>
  	<%= render :partial => "admin/site_contents/form", :locals => {:f => f} %>
	<hr id="form_info_divider" />
	<div class="field">
		<%= f.text_area :Body %>
	</div>
  	<div class="actions">
    	<%= f.submit %>
  	</div>
<% end %>
