<article class="module width_full">
	<header><h3>Listing <%= @posts.nil? ? "0" : @posts.length.to_s %> Posts</h3></header>
	<div>
		<table class="tablesorter" cellspacing="0">
			<thead>
				<tr>
					<th>Title</th>
					<th>Poster</th>
					<th>Category</th>
					<th>Comments</th>
					<th>Options</th>
				</tr>
			</thead>
			<tbody>
				<% @posts.each do |aPost| %>
					<tr>
						<td><%= aPost.Title %></td>
						<td><%= aPost.Category.nil? ? "NIL!" : aPost.Category.Name %></td>
						<td><%= aPost.CreatedBy.nil? ? "NIL!" : aPost.CreatedBy.username %></td>
						<td><%= aPost.Comments.empty? ? "0" : aPost.Comments.size.to_s %></td>
						<td>
							<%= link_to "View", aPost %>
							<%= link_to "Edit", edit_admin_post_path(aPost) %>
							<%= link_to "Destroy", "#" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</article>