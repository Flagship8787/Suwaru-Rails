<%= render :partial => "flags/form/assets/styles" %>
<%= render :partial => "flags/form/assets/scripts" %>
<%= form_for(@flag, :id => "ajax_flag_form", :remote => true) do |f| %>
  	<% if @flag.errors.any? %>
    	<div id="error_explanation">
      		<h2><%= pluralize(@flag.errors.count, "error") %> prohibited this flag from being saved:</h2>
      		<ul>
      			<% @flag.errors.full_messages.each do |msg| %>
        			<li><%= msg %></li>
      			<% end %>
      		</ul>
    	</div>
  	<% end %>
	<%= f.hidden_field :flagged_id %>
	<%= f.hidden_field :flagged_type %>
	<%= f.hidden_field :flagged_by_id %>
	<%= f.hidden_field :FlaggedByIP %>
  	<div class="field">
    	<%= f.label :Comment %><br />
		<%= f.text_area :Comment %>
  	</div>
  	<div class="actions">
    	<%= f.submit %>
  	</div>
<% end %>
